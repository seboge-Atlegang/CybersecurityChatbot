<Window x:Class="CybersecurityChatbot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cybersecurity Chatbot"
        Height="600" Width="900"
        Background="#FFFCE4EC"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Chat Display Area -->
        <ListBox x:Name="ChatListBox" Grid.Row="0" Margin="5"
                 Background="#FFF8BBD0" Foreground="Black" FontSize="14"
                 BorderBrush="#FFEC407A" BorderThickness="1" />

        <!-- Input and Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="5"
                    Background="#FFFCE4EC" HorizontalAlignment="Center">

            <TextBox x:Name="UserInputTextBox" Width="450" FontSize="14" Margin="5"
                     Background="White" Foreground="Black" BorderBrush="#FFEC407A" BorderThickness="1"/>

            <Button Content="Send" Width="80" Margin="5" Click="SendButton_Click"
                    Background="#FFF48FB1" Foreground="Black" BorderBrush="#FFD81B60" />

            <Button Content="Add Task" Width="90" Margin="5" Click="AddTaskButton_Click"
                    Background="#FFF06292" Foreground="Black" BorderBrush="#FFD81B60" />

            <Button Content="Play Quiz" Width="90" Margin="5" Click="PlayQuizButton_Click"
                    Background="#FFEC407A" Foreground="Black" BorderBrush="#FFC2185B" />

            <Button Content="Activity Log" Width="100" Margin="5" Click="ShowLogButton_Click"
                    Background="#FFE91E63" Foreground="White" BorderBrush="#FFAD1457" />
        </StackPanel>
    </Grid>
</Window>
